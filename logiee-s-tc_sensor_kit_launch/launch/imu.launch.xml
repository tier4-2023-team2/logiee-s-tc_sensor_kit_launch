<launch>
  <arg name="launch_driver" default="true" />

  <group>

    <push-ros-namespace namespace="imu" />

    <include file="$(find-pzkg-share logiee_ss_sensor_launch)/launch/microstrain.launch.py">
      <arg name="port" value="/dev/ttyACM0" />
      <arg name="imu_frame_id" value="imu_bottom_link" />
    </include>

    <include file="$(find-pkg-share imu_corrector)/launch/imu_corrector.launch.xml">
      <arg name="input_topic" value="imu/data" />
      <arg name="output_topic" value="imu_data" />
      <arg name="param_file" value="$(var individual_params_config)/imu_corrector.param.yaml" />
    </include>
  </group>
</launch>